{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES6",
    "outDir": "dist",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "sourceMap": true
  }
}
